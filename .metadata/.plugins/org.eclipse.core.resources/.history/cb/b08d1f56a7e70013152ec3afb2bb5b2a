  def checkPalid(input: String): Boolean = {
    val inputArray: Array[Char] = input.toCharArray()
    
    inputArray match {
      case Array(first, _, last) => first == last
      case Array(first, last)    => first == last
      case Array(onlyOne)        => true                   
    }
  }
  
}